<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cyber Cars</title>
</head>
<body>
    <%- include('partials/navbar', {
        nav: {
            login: '/admin/login',
            addCar: '/admin/car',
            addMnfctr: '/admin/manufacturer',
            cars: '/admin/car/update',
            manufacturers: '/admin/manufacturer/update',
            search: '/admin/search',
            users: '/admin/customerDetails',
            messages: '/admin/message',
            status: '/admin/carstatus'
        },
        active: 'users'
    }) %>
    <div class="table-data">
        <h2>Customer Details</h2>
        <table border='1'>
            <tr>
                <th>userId</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Credit Card Info.</th>
            </tr>

        
            <% for(var i = 0; i < data.length; i++) { %>
                <tr>
               <td><%= data[i].userID %> </td>
               <td> <%= data[i].name %> </td>
                <td> <%= data[i].email %></td>
                <td> <%= data[i].address %></td>
                <td> <%= data[i].phoneNumber %></td>
                <td> <%= data[i].creditCard %></td>
                <td> <a href="/admin/customerDetails/delete/<%=data[i].userID%>"  Onclick="return ConfirmDelete();">Delete</a></td> 
                </tr>
                 <% } %>
        
    </table>
    <script>
        function ConfirmDelete()
        {
          var x = confirm("Are you sure you want to delete?");
          if (x)
              return true;
          else
            return false;
        }
    </script> 
    </div>
</body>
</html>